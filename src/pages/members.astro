    <style>
      /* HTML Classes below: */
      .title {
        text-align: center;
        font-size: 250%;
        background-color: #ce4c4a;
      }

      .nav {
        text-align: center;
        font-size: 100%;
        display: flex;
        justify-content: space-evenly;
      }

      .lead-button,
      .proj-button,
      .com-button {
        border-radius: 10px;
        padding: 6px;
        width: 300px;
        margin-top: 15px;
        margin-bottom: 15px;
        font-size: var(--fontsize-h5);
        box-shadow: 3px 3px gray;
      }

      .leadership,
      .communications,
      .projects {
        width: auto;
        display: flex;
        height: auto;
        padding: 20px;
        border-radius: 10px;
        margin: 15px;
      }

      .leadership,
      .lead-button {
        background-color: #96bf70;
      }

      .lead-button:hover {
        background-color: var(--YOO-Green-Lightest);
        transition: 0.3s;
      }

      .communications,
      .com-button {
        background-color: #a6dfea;
      }

      .com-button:hover {
        background-color: var(--YOO-Blue-Light);
        transition: 0.3s;
      }

      .projects,
      .proj-button {
        background-color: #ecb9b8;
      }

      .proj-button:hover {
        background-color: var(--YOO-Red-Light);
        transition: 0.3s;
      }

      .description-box-coms,
      .description-box-lead,
      .description-box-proj {
        padding: 22px;
        border-radius: 10px;
      }
      .description-box-lead {
        background-color: var(--YOO-Green-Lightest);
      }

      .description-box-coms {
        background-color: var(--YOO-Blue-Light);
      }

      .description-box-proj {
        background-color: var(--YOO-Red-Light);
      }

      .learn-more-proj,
      .project-button {
        background-color: #ce4c4a;
      }

      .learn-more-coms {
        background-color: #55bbcf;
      }

      .learn-more-coms:hover {
        background-color: var(--YOO-Blue-Primary);
        transition: 0.3s;
      }

      .learn-more-lead {
        background-color: #618f32;
      }

      .learn-more-lead:hover {
        background-color: var(--YOO-Green-Light);
        transition: 0.3s;
      }

      .right1,
      .left2 {
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        margin-left: auto;
      }

      .right1,
      .left2 {
        flex: 1;
      }

      .left1,
      .right2 {
        flex: 0 0 auto;
        width: 375px;
        float: left;
      }

      .left1 h2,
      .right2 h2 {
        font-size: var(--fontsize-h2);
      }

      .left1 button,
      .right2 button {
        /*the learn more buttons but more general*/
        font-size: large;
        width: 100%;
        border-radius: 50px;
        position: relative;
        margin-top: 100%;
        padding: 10px;
      }

      .project-team-nav {
        display: flex;
        flex-direction: column;
        background-color: var(--YOO-Red-Light);
        border-radius: 15px;
        padding: 10px;
      }

      .project-button {
        width: 95%;
        /* change width later... */
        border-radius: 50px;
        margin: 3%;
        padding: 8px;
        border-radius: 10px;
        font: var(--fontsize-h4);
      }

      .project-button:hover,
      .learn-more-proj:hover {
        background-color: var(--YOO-Red-Primary);
        transition: 0.3s;
      }

      html {
        scroll-behavior: smooth;
      }
    </style>
